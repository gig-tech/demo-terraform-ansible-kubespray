## Terraform vars
# server_url
export TF_VAR_server_url="<G8's url>"

# client_jwt
export TF_VAR_client_jwt="<Your JWT token>"

# account
export TF_VAR_account="<Your OVC Account>"

# cloudspace name
export TF_VAR_cloudspace="<New cloudspace name>"

# cluster nodes
export TF_VAR_master_count=1
export TF_VAR_worker_count=3

# node resources
export TF_VAR_disksize=10
export TF_VAR_memory=2048

export TF_VAR_vcpus=2

# ssh key to load on all nodes
export TF_VAR_ssh_key="<Your SSH KEY>"

## Kubernetes config
export server_url=$TF_VAR_server_url
export account=$TF_VAR_account
export client_jwt=$TF_VAR_client_jwt

# path where cluster config file will be uploaded
export k8s_config=k8s_config

# size of the persistent storage
export persistent_volume_size=<Size of persistent volume in GiB>

# Path to Terraform config folder (needed for dynamic inventory terraform.py)
export ANSIBLE_TF_DIR=terraform
